		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"lint-staged-tsc": "^0.2.1",
		"nodemon": "^3.1.10",
		"oxfmt": "^0.34.0",
		"oxlint": "^1.49.0",
		"oxlint-tsgolint": "^0.14.2",
		"pino-pretty": "^13.1.3",
		"prisma": "^7.0.0",
		"rollup-plugin-visualizer": "^6.0.5",
		"tailwindcss": "^4.1.11",
