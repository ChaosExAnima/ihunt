		"react-router-dom": "7.12.0"
	},
	"lint-staged": {
		"*.{js,jsx,ts,tsx}": [
			"yarn run lint",
			"yarn run fmt"
		],
		"*.{json,md,mdx,css,scss,html,yml,yaml}": "yarn run fmt",
		"*.{ts,tsx}": "lint-staged-tsc"
	},
	"engines": {
		"node": ">=24.0.0"
	},
	"packageManager": "yarn@4.12.0"
}
