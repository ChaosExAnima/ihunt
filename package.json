{
	"name": "ihunt",
	"version": "0.1.0",
	"private": true,
	"type": "module",
	"scripts": {
		"dev": "NODE_ENV=development nodemon -w server -w vite.config.ts -w node_modules --exec tsx server/server.ts",
		"build": "yarn build:client && yarn build:server",
		"build:client": "vite build",
		"build:prisma": "prisma generate",
		"build:server": "esbuild server/server.ts --bundle --platform=node --target=node24 --format=esm --packages=external --outfile=server.js",
		"build:scripts": "esbuild scripts/*.ts --bundle --platform=node --target=node24 --format=esm --packages=external --outdir=scripts/dist",
		"start": "vite",
		"lint": "oxlint --type-aware",
		"lint:all": "yarn lint && yarn typecheck && yarn fmt:check",
		"typecheck": "tsc --noEmit",
		"fmt": "oxfmt",
		"fmt:check": "oxfmt --check",
		"studio": "prisma studio",
		"prepare": "husky",
		"docker:prod": "docker compose -f config/docker-compose.prod.yml --project-directory=."
	},
	"dependencies": {
		"@fontsource-variable/geist-mono": "^5.2.6",
		"@fontsource/kanit": "^5.2.6",
		"@hookform/resolvers": "^5.2.1",
		"@imgproxy/imgproxy-js-core": "^1.7.0",
		"@imgproxy/imgproxy-node": "^1.1.0",
		"@prisma/adapter-better-sqlite3": "^7.3.0",
		"@prisma/client": "^7.0.0",
		"@radix-ui/react-dialog": "^1.1.14",
		"@radix-ui/react-label": "^2.1.7",
		"@radix-ui/react-popover": "^1.1.14",
		"@radix-ui/react-select": "^2.2.5",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-switch": "^1.2.6",
		"@radix-ui/react-toast": "^1.2.14",
		"@radix-ui/react-tooltip": "^1.2.7",
		"@tailwindcss/vite": "^4.1.11",
		"@tanstack/react-query": "^5.83.0",
		"@tanstack/react-router": "^1.128.4",
		"@tanstack/react-router-devtools": "^1.128.4",
		"@trpc/client": "^11.8.1",
		"@trpc/server": "^11.8.1",
		"@trpc/tanstack-react-query": "^11.8.1",
		"bcryptjs": "^3.0.3",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"dotenv": "^17.2.0",
		"embla-carousel-react": "^8.6.0",
		"fastify": "^5.7.3",
		"input-otp": "^1.4.2",
		"iron-session": "^8.0.4",
		"lucide-react": "^0.562.0",
		"react": "^19.1.0",
		"react-admin": "^5.13.6",
		"react-dom": "^19.1.0",
		"react-hook-form": "^7.62.0",
		"react-image-crop": "^11.0.10",
		"sharp": "^0.34.5",
		"superjson": "^2.2.6",
		"tailwind-merge": "^3.3.1",
		"thumbhash": "^0.1.1",
