generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Hunt {
    id          Int       @id @default(autoincrement())
    createdAt   DateTime  @default(now())
    scheduledAt DateTime?
    completedAt DateTime?
    name        String
    description String
    status      String    @default("pending")
    maxHunters  Int       @default(4)
    danger      Int       @default(1)
    hunters     Hunter[]
    photos      Photo[]
    rating      Float?
    comment     String?
    payment     Int

    @@index([status])
}

model Hunter {
    id       Int     @id @default(autoincrement())
    name     String
    hunts    Hunt[]
    photos   Photo[] @relation("Photos")
    avatar   Photo?  @relation("Avatar", fields: [avatarId], references: [id])
    avatarId Int?    @unique
    money    Int     @default(0)
}

model Photo {
    id       Int     @id @default(autoincrement())
    path     String  @unique
    width    Int
    height   Int
    blurry   String?
    hunter   Hunter? @relation("Photos", fields: [hunterId], references: [id])
    hunterId Int?
    hunt     Hunt?   @relation(fields: [huntId], references: [id])
    huntId   Int?
    avatar   Hunter? @relation("Avatar")

    @@index([huntId, hunterId])
}
